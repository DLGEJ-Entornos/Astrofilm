@model IEnumerable<Astrofilm.Models.SALAS>

@{
    ViewBag.Title = "Index";
}

<h2>Salas</h2>

<p class="btn btn-default btn-outline-primary">
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aforo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Aforo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDSala }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IDSala }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDSala })
        </td>
    </tr>
}

</table>
