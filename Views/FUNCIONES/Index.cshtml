@model IEnumerable<Astrofilm.Models.FUNCIONES>

@{
    ViewBag.Title = "Index";
}

<h2>Funciones</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponibles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioBruto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PELICULAS.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SALAS.Ciudad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponibles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioBruto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PELICULAS.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SALAS.Ciudad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDFuncion }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IDFuncion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDFuncion })
        </td>
    </tr>
}

</table>
