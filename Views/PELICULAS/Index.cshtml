@model IEnumerable<Astrofilm.Models.PELICULAS>

@{
    ViewBag.Title = "Index";
}

<h2>Peliculas</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Año)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PuntMedia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuntMedia)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDPelicula }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IDPelicula }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IDPelicula })
            </td>
        </tr>
    }
</table>


