@model IEnumerable<Astrofilm.Models.PELICULAS>
@Styles.Render("~/Content/Propios/archivosPelis.css")

@{
    ViewBag.Title = "ArchivoPelis";
}
    <br /><br />
<h2>Archivo  de Películas</h2>

<div id="sliderCards" class="border border-primary">
    @foreach (var item in Model)
    {
        <div class="card table-bordered border border-secondary m-1" style="width: 18rem; display:inline-block;">
            @*<img src="..." class="card-img-top" alt="...">*@
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => item.Titulo)
                    @*@Html.DisplayFor(modelItem => item.Titulo)*@
                    <img src="~/Content/Images/Peliculas/@Html.DisplayFor(modelItem => item.Imagen)" style="width:50px" />
                </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Ver</a>
            </div>
        </div>

    }
</div>
